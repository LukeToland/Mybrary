<h2>Search Movies</h2>
<form action="/movies" method="get">
  <div>
    <label>Title</label>
    <input type="text" name="title" value="<%=searchOptions.title %>" />
  </div>

  <div>
    <label>Released Before</label>
    <input
      type="date"
      name="releasedBefore"
      value="<%= searchOptions.releasedBefore %>"
    />
  </div>
  <div>
    <label>Released After</label>
    <input
      type="date"
      name="releasedAfter"
      value="<%= searchOptions.releasedAfter %>"
    />
  </div>

  <button type="submit">Search</button>
</form>
<br />

<div>
  <% movies.forEach(movie =>{ %>
  <img height="300" width="200" src="<%= movie.posterImagePath %> " />
  <% }) %>
</div>
